body
  background-color #eee
  font-family "Nunito"

/* Headings
-----------------------------------------------------------------------------*/
h1, h2, h3, h4, h5, h6
  font-weight 300

h2
  border-bottom 0

/* Page
-----------------------------------------------------------------------------*/
@media (min-width 719px)
  .page
    padding-left 13.75rem

  .page-edit
    display none

  .page-nav
    padding 0

  .page-nav > .inner
    padding 0
    border-top none

/* Navbar
-----------------------------------------------------------------------------*/
.navbar
  z-index 500
  border-bottom none
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, .05)

.navbar .logo
  width 165.37px

.nav-link, .repo-link
  font-weight 800

/* Sidebar
-----------------------------------------------------------------------------*/
.sidebar
  width 13.75rem
  border-right none
  background-color transparent
  background-image linear-gradient(0deg, #7e8ea1 0%, #3c4655 100%)

.sidebar-heading
  padding 0 1.7rem

.sidebar-group
  margin-bottom 2rem

.sidebar-group:not(.collapsable) .sidebar-heading,
.sidebar-heading
  text-transform uppercase
  letter-spacing 0.13rem
  font-size 12px
  font-weight 800
  color #C1CDDB

a.sidebar-link
  color #fff
  padding-top 0.5rem
  padding-bottom 0.5rem
  border-left 0.125rem solid transparent

a.sidebar-link:hover
  color #fff
  opacity 0.5
  border-color-left rgba(255, 255, 255, 0.7)

a.sidebar-link:active
  color #fff
  opacity 0.7
  border-color-left rgba(255, 255, 255, 0.5)

a.sidebar-link.active
  color #fff
  border-left-color #fff

.sidebar-group a.sidebar-link
  padding-left 1.5rem

.sidebar .sidebar-sub-headers
  padding-left 1.5rem

.sidebar-sub-headers a.sidebar-link
  padding-left 0.9rem


@media (max-width 959px)
  .sidebar .nav-links
    border-bottom 2px solid rgba(255, 255, 255, 0.1)
  
  .nav-links a.nav-link, .nav-links a.repo-link
    color #fff
  
/* Icons
-----------------------------------------------------------------------------*/
.icon.outbound
  display none

/* Content
-----------------------------------------------------------------------------*/
h1 .header-anchor, 
h2 .header-anchor, 
h3 .header-anchor, 
h4 .header-anchor, 
h5 .header-anchor, 
h6 .header-anchor
  opacity 1
  color #bbb

h1 .header-anchor:hover, 
h2 .header-anchor:hover, 
h3 .header-anchor:hover, 
h4 .header-anchor:hover, 
h5 .header-anchor:hover, 
h6 .header-anchor:hover
  text-decoration none !important

.content:not(.custom)
  padding 4rem 2.5rem 0

/* Prev/Next Links
-----------------------------------------------------------------------------*/
@require './override'

$tipColor = #A48CD3

.prev, .next
  color $accentColor 


/* Custom Blocks
-----------------------------------------------------------------------------*/
.custom-block.tip
  background-color $tipColor

.custom-block.tip,
.custom-block.warning,
.custom-block.danger
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, .05)
  border-left none
  border-radius 4px

.custom-block-title
  color #fff

.custom-block.tip p, .custom-block.tip a
  color #fff
  
.custom-block.warning a,
.custom-block.danger a
  color currentColor

.custom-block a
  font-weight 800
  text-decoration underline


/* Code Blocks
-----------------------------------------------------------------------------*/
div[class*="language-"]
  background-color white
  -webkit-font-smoothing subpixel-antialiased
  -moz-osx-font-smoothing subpixel-antialiased
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, .05)

.content pre code, .content pre[class*="language-"] code
  color #666

.token.selector, .token.important, .token.atrule, .token.keyword, .token.builtin
  color $accentColor

.token.property, .token.class-name, .token.constant, .token.symbol
  color $tipColor

.token.boolean, .token.number, .token.function
  color #666

.token.string, .token.char, .token.attr-value, .token.regex, .token.variable
  color $accentColor

.token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata
  color #bbb
