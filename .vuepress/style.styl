body {
  background-color: #eee
  font-family: "Nunito";
}

/* Headings
-----------------------------------------------------------------------------*/
h1, h2, h3, h4, h5, h6 {
  font-weight: 300;
}

h2 {
  border-bottom: 0;
}

.navbar {
  z-index: 500;
  border-bottom: none;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, .05);
}

.navbar .logo {
  width: 165.37px;
}

.sidebar {
  width: 13.75rem;
  border-right: none;
  background-color: transparent;
  background-image: linear-gradient(0deg, #7e8ea1 0%, #3c4655 100%);
}

.sidebar-group {
  margin-bottom: 2rem;
}

.sidebar-group:not(.collapsable) .sidebar-heading,
.sidebar-heading {
  text-transform: uppercase;
  letter-spacing: 0.13rem;
  font-size: 12px;
  font-weight: 800;
  color: #C1CDDB;
}

a.sidebar-link {
  color: #fff;
  padding-top: 0.5rem
  padding-bottom: 0.5rem
}

a.sidebar-link.active {
  color: #fff;
  border-left-color: #fff
}

.sidebar-group a.sidebar-link {
  padding-left: 1.5rem
}

.sidebar .sidebar-sub-headers {
  padding-left: 1.5rem
}

.sidebar-sub-headers a.sidebar-link {
  padding-left: 0.9rem
}


@media (max-width: 959px) {
  .sidebar .nav-links {
    border-bottom: 2px solid rgba(255, 255, 255, 0.1);
  }

  .nav-links a.nav-link, .nav-links a.repo-link {
    color: #fff;
  }
}

.nav-link, .repo-link {
  font-weight: 800
}

.icon.outbound {
  display: none;
}

.content:not(.custom) {
  padding: 4rem 2.5rem
}

/* Prev/Next Links
-----------------------------------------------------------------------------*/
@require './override'

$tipColor = #A48CD3

.prev, .next
  color $accentColor 


/* Custom Blocks
-----------------------------------------------------------------------------*/
.custom-block.tip
  background-color $tipColor

.custom-block.tip,
.custom-block.warning,
.custom-block.danger
  border-left none
  border-radius 4px

.custom-block-title
  color #fff

.custom-block.tip p, .custom-block.tip a
  color #fff
  
.custom-block.warning a,
.custom-block.danger a
  color currentColor

.custom-block a
  font-weight 800
  text-decoration underline
